@model IEnumerable<XpertAditusUI.Models.Paquestionnaire>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th, td {
        text-align: center;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" style="font-size:24px"></i>Create New</a>
    <a asp-action="ImportQuestion" class="btn btn-outline-success" style="margin-left: 25px"><i class="fa fa-upload"></i>Import CSV File</a>
</p>

<table class="table table-striped" id="questinariedatatable">
    <thead>
        <tr>
            <th>Action</th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionnaireType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatrainingContent)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="text-align:left">
                <a asp-action="Edit" asp-route-id="@item.PaquestionnaireId"><span title="Edit"><i class="fa fa-edit" style="font-size:30px; color:seagreen"></i></span></a><br>
                <a asp-action="Details" asp-route-id="@item.PaquestionnaireId"><span title="Details"><i class="fa fa-bars" style="font-size:30px; color:blue"></i></span></a><br>
                <a asp-action="Delete" asp-route-id="@item.PaquestionnaireId"><span title="Delete"><i class="fa fa-trash-o" style="font-size:30px; color:red"></i></span></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionnaireType)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PatrainingContent.Name)
            </td>


        </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#questinariedatatable').DataTable().scrollTableBody();
        });

    </script>
}
