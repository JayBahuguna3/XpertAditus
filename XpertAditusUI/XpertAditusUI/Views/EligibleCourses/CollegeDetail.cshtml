    <script src="~/js/CollegeProfile/js/infobox.min.js"></script>
    <script src="~/js/CollegeProfile/js/markerclusterer.js"></script>
    <script src="~/js/CollegeProfile/js/maps.js"></script>


}
else
{
    <h1 style="padding-top:100px;"> No Profile Found </h1>
}
@section Scripts {
    <script>
        function Navigate(id) {
            let collegeProfileID = id;
            showSpinner();
            var formData = new FormData();
            formData.append('CollegeProfile_ID', collegeProfileID);
            
            $.ajax({
                url: "/EligibleCourses/AppliedCollege",
                type: "POST",
                dataType: "json",
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                },
                error: function (data) {
                }
            });
            setTimeout(() => { window.location.href = "/EligibleCourses/CollegeDetail/" + id; }, 50);

            // Additional Coding for set time out, not required 

          @*  setTimeout(() => {
                hideSpinner();
                window.location.href = "/EligibleCourses/CollegeDetail/" + id;
            }, 3000);*@

        }
    </script>
}