@{
    Layout = "_Layout";
}

<style>
    .spinner {
        position: absolute;
        top: 50%;
        left: 50%;
        z-index: 2;
    }

    .overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.5);
        z-index: 1;
        cursor: pointer;
    }
</style>

<div id="divSpinner" class="overlay" style="display:none">
    <div class="spinner spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

