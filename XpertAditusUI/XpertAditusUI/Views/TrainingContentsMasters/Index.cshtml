@model IEnumerable<XpertAditusUI.Models.TrainingContentsMaster>

@{
    ViewData["Title"] = "Index";

}
<style>
    th, td {
        text-align: center;
    }
</style>
  
  <div class="row">
            
   <a asp-action="Create" style="font-size:34px"><u><i class="fa fa-book" style="margin-right: 20px" ></i>Create New</u></a>
 </div>
    <br/>
        <div style="overflow-x:scroll;width:100%">
            <table class="table table-striped" id="trainingcontentdatatable" style="line-height:16px; font-size:16px">

                <thead>
                    <tr>
                        <th>Action</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Path)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContentType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course)
                        </th>
                        

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TrainingContentId"><span title="Edit"><i class="fa fa-edit" style="font-size:22px;color:seagreen;"></i></span></a>
                           
                            <a asp-action="Details" asp-route-id="@item.TrainingContentId"><span title="Details"><i class="fa fa-bars" style="font-size:22px;color:navy"></i></span></a>
                            
                            <a asp-action="Delete" asp-route-id="@item.TrainingContentId"><span title="Delete"><i class="fa fa-trash" style="font-size:22px;color:red;"></i></span></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Path)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Name)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
            
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

            @section scripts{
                <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
                <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>
                <script>
                    $(document).ready(function () {
                        $('#trainingcontentdatatable').DataTable().scrollTableBody();
                    });

                </script>
            }
