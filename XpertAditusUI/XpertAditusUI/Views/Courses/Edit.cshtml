@model XpertAditusUI.Models.Course

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit Course</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CourseId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Fee" class="control-label"></label>
        <input asp-for="Fee" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <label for="true">True</label>
        <input type="radio" asp-for="IsActive" value="True" />
        <label for="false">False</label>
        <input type="radio" asp-for="IsActive" value="False" />
        <label class="control-label">Previously IsActive</label>
        <input asp-for="IsActive" readonly class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label class="control-label">Test Type</label>
        <label for="true">Single</label>
        <input type="radio" asp-for="Type" value="Single" />
        <label for="false">Multiple</label>
        <input type="radio" asp-for="Type" value="Multiple" />
        <label class="control-label">Previously Type</label>
        <input asp-for="Type" readonly class="form-control" type="text" />
    </div>
