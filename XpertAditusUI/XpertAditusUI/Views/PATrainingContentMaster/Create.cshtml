@model XpertAditusUI.Models.PatrainingContentMaster

@{
    ViewData["Title"] = "Create";

}



<h1><img src="https://img.icons8.com/ultraviolet/40/4a90e2/create-order--v2.png"  style="color: darkblue"/>  Create The New Training Content</h1>
<br />
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label" style="color: darkblue;"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContentType" class="control-label" style="color:darkblue;"></label>
    </div>
    <div class="form-group">
        @Html.DropDownListFor(e => e.ContentType,
                           new List<SelectListItem> {
                    new SelectListItem{Text = "Video", Value = "Video"},
                    new SelectListItem{Text = "File", Value = "File"},
                    new SelectListItem{Text = "Embeded", Value = "Embeded"},
                    new SelectListItem{Text = "Youtube", Value = "Youtube"}
                  }, "Select Content Type")
        <span asp-validation-for="ContentType" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="CourseId" class="control-label" style="color:darkblue;"></label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
            <option value="">---- Select Course ----</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span style="color:black;"><b>Note - Only enter path if content type - Youtube is selected.</b></span>
        <br/>
        <label asp-for="Path" class="control-label" style="color:darkblue;"></label>
        <input asp-for="Path" class="form-control" />
        <span asp-validation-for="Path" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input  type="file" name="file" id="file" value="Upload" asp-for="ContentType" accept="msword,video,doc,pdf/*">
    </div>
    <div class="form-group">
        <b><label asp-for="IsActive" class="control-label" style="color:darkblue;"></label></b>
        <div class="col">
        <div class="row">
            <input class="with-border" type="radio" asp-for="IsActive" style="margin-right: 10px" value="True"/>
            <label for="true" style="margin-right: 16px" ><i style="color:black"></i>True</label>
            <input class="with-border" style="margin-right: 10px" type="radio" asp-for="IsActive" value="False" />
            <label for="false" style="margin-right: 16px"><i style="color:black"></i>False</label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
            
        </div>
    </div>
       

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>

        <a asp-action="Index" class="btn btn-primary">  |  Back to List</a>

    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
