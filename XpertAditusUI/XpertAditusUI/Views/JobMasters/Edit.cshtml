@model XpertAditusUI.Models.JobMaster

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" />
            <div class="form-group" style="display:none">
                <label asp-for="UserProfileId" class="control-label">Email</label>
                <input asp-for="UserProfileId" class="form-control" readonly />
                @*<input asp-for="UserProfileId" class="form-control" value="ViewBag.UserProfileId" readonly />*@
                <span asp-validation-for="UserProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="text" value="@ViewBag.EmailId" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="StateId" class="control-label  required">State</label>
                <select asp-for="StateId" class="chosen" asp-items="ViewBag.StateId">
                    <option value=" ">Select State</option>
                </select>
                <span asp-validation-for="StateId" class="text-danger">

                </span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictId" class="control-label  required">District</label>
                <select asp-for="DistrictId" class="chosen" asp-items="ViewBag.DistrictId">
                    <option value=" ">Select District</option>
                </select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label">City</label>
                <select asp-for="CityId" class="chosen" asp-items="ViewBag.CityId">
                    <option value=" ">Select City</option>
                </select>

                @*<select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>*@
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobDesignation" class="control-label"></label>
                <input asp-for="JobDesignation" class="form-control" />
                <span asp-validation-for="JobDesignation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinExperience" class="control-label"></label>
                <input asp-for="MinExperience" class="form-control" />
                <span asp-validation-for="MinExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxExperience" class="control-label"></label>
                <input asp-for="MaxExperience" class="form-control" />
                <span asp-validation-for="MaxExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastDate" class="control-label"></label>
                <input asp-for="LastDate" class="form-control" />
                <span asp-validation-for="LastDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ctc" class="control-label"></label>
                <input asp-for="Ctc" class="form-control" />
                <span asp-validation-for="Ctc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedJoiningDate" class="control-label"></label>
                <input asp-for="ExpectedJoiningDate" class="form-control" />
                <span asp-validation-for="ExpectedJoiningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfOpening" class="control-label"></label>
                <input asp-for="NoOfOpening" class="form-control" />
                <span asp-validation-for="NoOfOpening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry" class="control-label"></label>
                <select asp-for="Industry" class="form-control" asp-items="ViewBag.Industry"></select>
                <span asp-validation-for="Industry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkShift" class="control-label"></label>
                <select asp-for="WorkShift" class="form-control" asp-items="ViewBag.WorkShift"></select>
                <span asp-validation-for="WorkShift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobLevel" class="control-label"></label>
                <select asp-for="JobLevel" class="form-control" asp-items="ViewBag.JobLevel"></select>
                <span asp-validation-for="JobLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <label for="true">True</label>
                <input type="radio" asp-for="IsActive" value="True" />
                <label for="false">False</label>
                <input type="radio" asp-for="IsActive" value="False" />
                <label class="control-label">Previously IsActive</label>
                <input asp-for="IsActive" readonly class="form-control" type="text" />

                @*<input asp-for="IsActive" class="form-control" />*@
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            @*<div class="form-group">

            <label asp-for="ModifiedBy" class="control-label"></label>
            <select asp-for="ModifiedBy" class="form-control" asp-items="ViewBag.ModifiedBy"></select>
            <span asp-validation-for="ModifiedBy" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ModifiedDate" class="control-label"></label>
            <input asp-for="ModifiedDate" class="form-control" />
            <span asp-validation-for="ModifiedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="control-label"></label>
            <select asp-for="CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
